<h1>Survey Submissions</h1>

<div class="container survey">
    <table class="survey-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Role</th>
          <th>Meeting Feel</th>
          <th>Comments</th>
          <th>Submitted At</th>
        </tr>
      </thead>
      <tbody>
        <% @surveys.each do |survey| %>
          <tr>
            <td><%= survey.name %></td>
            <td><%= survey.address %></td>
            <td><%= survey.role %></td>
            <td><%= survey.meeting_feel %></td>
            <td><%= survey.comments %></td>
            <td><%= survey.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<!--This is for the Statistics-->

<div class="container stats">
  <h2>Total Surveys: <%= @total_surveys.to_i %></h2>

  <div class="results">
    <p><strong>Productive:</strong> <%= @productive_count.to_i %> (<%= (@productive_count.to_f / @total_surveys.to_f * 100).round(2) unless @total_surveys.to_f == 0 %>%)</p>
    <p><strong>Neutral:</strong> <%= @neutral_count.to_i %> (<%= (@neutral_count.to_f / @total_surveys.to_f * 100).round(2) unless @total_surveys.to_f == 0 %>%)</p>
    <p><strong>Unproductive:</strong> <%= @unproductive_count.to_i %> (<%= (@unproductive_count.to_f / @total_surveys.to_f * 100).round(2) unless @total_surveys.to_f == 0 %>%)</p>
  </div>
</div>